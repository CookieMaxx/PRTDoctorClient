<Window x:Class="PRTDoctorClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRTDoctorClient"
        mc:Ignorable="d"
            Title="Login" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="txtUsername" Margin="0,0,0,10" Text="Username"/>
            <TextBox Name="txtPassword" Margin="0,0,0,10" Text="Password"/>
            <Button Content="Login" Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
